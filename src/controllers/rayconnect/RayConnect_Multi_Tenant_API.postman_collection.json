			"item": [
				{
					"name": "Odyssey Payments Endpoint",
					"request": {
						"method": "GET",
						"header": [
							{"key": "Authorization", "value": "Bearer {{b2b_api_token}}"}
						],
						"url": {
							"raw": "{{baseUrl}}/integrations/odyssey/payments?FROM=2022-01-01T00:00:00Z&TO=2022-01-31T23:59:59Z",
							"host": ["{{baseUrl}}"],
							"path": ["integrations", "odyssey", "payments"],
							"query": [
								{"key": "FROM", "value": "2022-01-01T00:00:00Z"},
								{"key": "TO", "value": "2022-01-31T23:59:59Z"}
							]
						}
					}
				}
			]
		}
