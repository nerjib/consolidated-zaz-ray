	"item": [
		{
			"name": "Business Management",
			"item": [
				{
					"name": "Create Business",
					"request": {
						"method": "POST",
						"header": [
							{"key": "Authorization", "value": "Bearer {{jwt_token}}"}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"name\": \"My New Business Inc.\"\n}",
							"options": {"raw": {"language": "json"}}
						},
						"url": {
							"raw": "{{baseUrl}}/businesses",
							"host": ["{{baseUrl}}"],
							"path": ["businesses"]
						}
					}
				},
				{
					"name": "Update Business Credentials",
					"request": {
						"method": "PUT",
						"header": [
							{"key": "Authorization", "value": "Bearer {{jwt_token}}"}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"paystack_secret_key\": \"sk_test_...\",\n  \"paystack_public_key\": \"pk_test_...\"\n}",
							"options": {"raw": {"language": "json"}}
						},
						"url": {
							"raw": "{{baseUrl}}/businesses/credentials",
							"host": ["{{baseUrl}}"],
							"path": ["businesses", "credentials"]
						}
					}
				},
				{
					"name": "Generate B2B API Token",
					"request": {
						"method": "POST",
						"header": [
							{"key": "Authorization", "value": "Bearer {{jwt_token}}"}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"name\": \"Odyssey Platform Integration\"\n}",
							"options": {"raw": {"language": "json"}}
						},
						"url": {
							"raw": "{{baseUrl}}/businesses/api-tokens",
							"host": ["{{baseUrl}}"],
							"path": ["businesses", "api-tokens"]
						}
					}
				}
			]
		},
		{
			"name": "Authentication",
			"item": [
				{
					"name": "Login User",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": ["pm.test(\"Status code is 200\", function () { pm.response.to.have.status(200); });", "var jsonData = pm.response.json();", "pm.environment.set(\"jwt_token\", jsonData.token);"],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"body": {
							"mode": "raw",
							"raw": "{\n  \"username\": \"admin_user\",\n  \"password\": \"password123\"\n}",
							"options": {"raw": {"language": "json"}}
						},
						"url": {
							"raw": "{{baseUrl}}/auth/login",
							"host": ["{{baseUrl}}"],
							"path": ["auth", "login"]
						}
					}
				}
			]
		},
		{
			"name": "User Management",
			"item": [
				{
					"name": "Invite User to Business",
					"request": {
						"method": "POST",
						"header": [
							{"key": "Authorization", "value": "Bearer {{jwt_token}}"}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"username\": \"new_agent\",\n  \"email\": \"new.agent@business.com\",\n  \"password\": \"agentpass\",\n  \"role\": \"agent\",\n  \"name\": \"New Agent Name\"\n}",
							"options": {"raw": {"language": "json"}}
						},
						"url": {
							"raw": "{{baseUrl}}/auth/register",
							"host": ["{{baseUrl}}"],
							"path": ["auth", "register"]
						}
					}
				},
				{
					"name": "Update User",
					"request": {
						"method": "PUT",
						"header": [
							{"key": "Authorization", "value": "Bearer {{jwt_token}}"}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"phone_number\": \"+15551234567\"\n}",
							"options": {"raw": {"language": "json"}}
						},
						"url": {
							"raw": "{{baseUrl}}/users/{{user_id}}",
							"host": ["{{baseUrl}}"],
							"path": ["users", "{{user_id}}"]
						}
					}
				}
			]
		},
